<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/personalinfor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#303537"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/touxiang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ofm_profile_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/touxiang"
            android:gravity="center"
            android:text="小人物"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#25282A"
        />
    
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#303537"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ofm_photo_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/photo"
            android:gravity="center"
            android:text="我的相册"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#25282A"
        />
    
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#303537"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/collect_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ofm_collect_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/collect_icon"
            android:gravity="center"
            android:text="我的收藏"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#25282A"
        />
    
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#303537"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ofm_card_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/card_icon"
            android:gravity="center"
            android:text="我的钱包"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#25282A"
        />
    
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#303537"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/emostore_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ofm_emostore_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/emostore_icon"
            android:gravity="center"
            android:text="表情"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#25282A"
        />
    
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#303537"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ofm_setting_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/setting_icon"
            android:gravity="center"
            android:text="设置"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#25282A"
        />
    
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#303537"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/feedback_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ofm_feedback_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/feedback_icon"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>
